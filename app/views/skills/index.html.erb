<table>
  <tr>
    <th>Skills</th>


    <th colspan="2"></th>
  </tr>
 
  <% @skill.each do |skill| %>
    <tr>
      <td><%= skill.skill %></td>
      <td><%= skill.users.map {|user| user.email}.join(', ') %></td>
      <td><%= skill.projects.map {|project| project.name}.join(', ') %></td>
      <td><%= link_to "Show", skill_path(skill)  %></td>
      <td><%= link_to "Edit",edit_skill_path(skill) %></td>
      <td><%= link_to 'Destroy', skill ,method: :delete,data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
<%= link_to "Create new skill", {controller: 'skills', action: 'new'} %>
